<div class="Login-wrapper">
  <h1>ログイン</h1>

  <div class="Login-form">
    <%= form_with(url: login_path, scope: :session, local: true) do |form| %>

      <%= form.label :メール, {class: "form-label"} %>
      <%= form.email_field :email, {class: "form-field User-field"} %>

      <%= form.label :パスワード, {class: "form-label Login-Label-password"} %>
      <%= form.password_field :password, {class: "form-field User-field"} %>

      <%= form.check_box :remember_me, {class: "Login-Label-remember"} %>
      <%= form.label :次回から自動でログイン %>

      <%= form.submit "ログイン", {class: "btn Login-btn"} %>

    <% end %>
  </div>
</div>
