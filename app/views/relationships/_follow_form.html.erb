<% if current_user.present? && current_user.followings.find_by(id: @user.id) %>
  <%= link_to "フォロー中", relationship_path(@user),
                              {class: "follow_btn followed",
                               method: :delete,
                               remote: true} %>
<% else %>
  <%= link_to "フォローする", relationships_path(followed_id: @user.id),
                            {class: "follow_btn following",
                             method: :post,
                             remote: true} %>
<% end %>
